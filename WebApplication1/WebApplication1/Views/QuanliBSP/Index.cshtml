@model IEnumerable<WebApplication1.Models.BangSanPham>

@{
    ViewBag.Title = "Quyết Tiến - Tạo sản phẩm";
}

<h2>Thêm sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-striped" id="DanhSachSanPham">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Giá gốc
            </th>
            <th>
                Giá góp
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Tên loại
            </th>
            <th>
                Hình ảnh
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MaSP
                </td>
                <td>
                    @item.TenSP
                </td>
                <td>
                    @item.GiaBan.ToString("N0")
                </td>
                <td>
                    @item.GiaGoc.ToString("N0")
                </td>
                <td>
                    @item.GiaGop.ToString("N0")
                </td>
                <td>
                    @item.SoLuongTon.ToString("N0")
                </td>
                <td>
                    @item.LoaiSanPham.TenLoai
                </td>
                <td>
                    <img src="@Url.Action("Details", new { id = item.id })" width="70" height="50"/>
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id })">
                        <span class="glyphicon glyphicon-pencil"> | </span>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.id })">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#DanhSachSanPham').DataTable();
            $('.dataTables_filter').css("float", "left");
            $('.dataTables_length').css("float", "right");
        });
        
    </script>
      }